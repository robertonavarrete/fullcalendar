$('.modal').modal('show')
$('.modal-body').html("<%= j render 'form', event: @event %>")
$('.modal-content').on('focusin','.datepicker', function(){
    $(this).datetimepicker({
    icons: {
        time: 'fa fa-clock-o',
        date: 'fa fa-calendar',
        up: 'fa fa-chevron-up',
        down: 'fa fa-chevron-down',
        previous: 'fa fa-chevron-left',
        next: 'fa fa-chevron-right',
        today: 'fa fa-calendar-check-o',
        clear: 'fa fa-trash-o',
        close: 'fa fa-close'
    }
    })
})